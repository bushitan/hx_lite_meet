    font-size: 9pt;
    color: #8d8d8d;
    /* border-bottom:1px dashed #B8B8B8;  */
    /* font-weight: bold;   */
}
.art__summary label{
    margin-right: 10px;
}

.art_audio {
    display: flex;
    align-items: center;
    margin: 10px 0px 30px;
}
audio{
    margin: auto;
  
}

.art_video {
    display: flex;
    flex-direction:column;
    align-items: center;
}
.video_des {
    padding:5px 30rpx;
    text-align: left;
    font-size: 14px;
    font-weight: bold;   
}
video{
    margin: auto;
}

