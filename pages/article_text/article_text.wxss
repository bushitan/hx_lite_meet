.art__image {
  /*height: 180px; */
  width :690rpx;
  margin: 2px auto 5px;
}

.font_size{
    position:fixed;
    /*width:72rpx;
    height:72rpx;*/
    padding: 2px 8px;
    bottom: 48rpx;
    right:48rpx;
    color: #fff;
    font-size:11pt;
    background-color: #187bbf;
    border-radius: 5rpx;
    /*box-shadow: 0px 3px 6px -2px rgba(0,0,0,0.3);*/
    box-shadow: 0px 2px 6px 1px rgba(0,0,0,0.2);
    /*z-index: 10000;*/
}
.next{
    position:fixed;
    padding: 2px 8px;
    bottom: 48rpx;
    left:48rpx;
    color: #fff;
    font-size: 11pt;
    background-color: #187bbf;
    border-radius: 5rpx;
    /*box-shadow: 0px 3px 6px -2px rgba(0,0,0,0.3);*/
    box-shadow: 0px 2px 6px 1px rgba(0,0,0,0.2);
    /*z-index: 10000;*/
    max-width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.art__title {
    padding:15px;
    text-align: left;
    font-size: 14pt;
    font-weight: bold;   
    color: #044cab;
    
}
.art__summary{
    margin:0px 15px; 
    /* padding-bottom:15px;  */
