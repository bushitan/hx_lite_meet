/* 订单 */
.order{
    background-color: #fff;
    width: 100%;
    position: absolute;
    bottom: 0px;
}

/* 遮罩层 */
.shade{
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: #E2E2E2;
    opacity:0.8;
}
/* 订单 标题 */
.order .head{
    padding: 10px;
    border-top: 1px solid  #E2E2E2;
}
.order .head icon{
    position: fixed;
}
.order .head label{
    font-size: 14pt;
    font-weight: bold;
}
.order .head view{
    text-align: center;
    /* margin: auto;  */
}

/* 订单 原始价格 */
.order .origin {
    border-top: 1px solid  #E2E2E2;
    padding-top: 25px ;
}
.order .origin view{
    
    font-size: 11pt;
    text-align: center;
}
.order .origin label{
    padding-top:12px; 
    font-size: 32px;
    font-weight: bold;
}

/* 订单 优惠券 */
.order .discount{
    display: flex;
    justify-content: space-around;
    align-items:center ;
    color:#999999;
    /* padding-top:20px;  */
    font-size: 9pt;
}

.order .discount .picker-select{
    position:relative;
    padding-left:15px;
    padding-right:30px;
    height:2.58823529em;
    min-height:2.58823529em;
    line-height:2.58823529em;
}
.order .discount .picker-select::before {

    content:" ";
    display:inline-block;
    height:6px;
    width:6px;
    border-width:2px 2px 0 0;
    border-color:#C8C8CD;
    border-style:solid;
    -webkit-transform:matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform:matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position:relative;
    top:-2px;
    position:absolute;
    top:50%;
    right:15px;
    margin-top:-4px;
}

