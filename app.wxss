/**app.wxss**/
@import 'weui.wxss';
@import 'template/waterfall.wxss';



page{
     /* background-color: #f7f7f7;  */
     /* background-color: #eeeeee;  */
     background-color: #f9f9f9;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif,Microsoft YaHei;
    font-family : "Microsoft YaHei";
    /* letter-spacing:1px; */
}

.roll__scroll_view{
    height: 100vh;
}

.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}
 
.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.placeholder{
    margin: 5px;
    padding: 0 10px;
    text-align: center;
    background-color: #EBEBEB;
    height: 15em;
    line-height: 2.3em;
    color: #cfcfcf;
}

.wrap{
    flex-direction: row;
    flex-wrap: wrap
}
.placeholder-1{
    margin: 5px;
    padding:0px 10px;
    text-align: center;
    background-color: #EBEBEB;
    height: 2.3em;
    line-height: 2.3em;
    font-size: 14px;
    color: #cfcfcf;
}

.space-4{
    height: 4px;
}
.space-6{
    height: 6px;
}
.space-64{
    height: 64px;
}
.space-35{
    height: 35px;
}
.space-8 {
    height:8rpx;
}
.space-16 {
    height:16rpx;
}
.space-72 {
    height:72rpx;
}
.space-120 {
    height:120rpx;
}




.screen_dialog{
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}
.screen_full{
    width: 750rpx;
    height: 100vh;
}

.screen_bg__white{
    background-color: #fff;
}
.screen_bg__black_30{
    background-color: rgba(0,0,0,0.6);
}

